<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#1a1786</item>
        <item name="android:textColorHint">#000066</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#1a1786</item>
        <item name="android:textColorHint">#000066</item>
    </style>

    <style name="text_style" parent="@android:style/TextAppearance">
        <item name="android:textColor">#1a1786</item>
        <item name="android:textColorHint">#626954</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="button_style" parent="@android:style/Widget.Button">
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#626954</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>